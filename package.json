{
  "name": "lambda-pm-app",
  "version": "1.2.0",
  "description": "Project Management App",
  "repository": "github:myxozoa/LPM",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "release": "build -p always"
  },
  "build": {
    "productName": "Lamdba PM App",
    "appId": "com.rmiksch.pmapp",
    "copyright": "Copyright Â© 2018 Ronnie Miksch",
    "directories": {
      "output": "./release-builds"
    },
    "publish": [{
      "provider": "github"
    }],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "publish": [
        "github"
      ]
    },
    "dmg": {
      "icon": "./assets/icons/mac/PM_App.icns"
    },
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": "false",
      "perMachine": "true",
      "allowToChangeInstallationDirectory": "true",
      "installerIcon": "./assets/icons/win/PM_App.ico",
      "deleteAppDataOnUninstall": "true"
    },
    "linux": {
      "target": "AppImage",
      "maintainer": "Ronnie Miksch",
      "publish": [
        "github"
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-builder": "^20.28.3"
  },
  "dependencies": {
    "electron-updater": "^3.1.2",
    "nedb": "^1.8.0",
    "popper.js": "^1.14.3"
  }
}
