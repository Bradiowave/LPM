{
  "name": "lambda-pm-app",
  "version": "1.1.0",
  "description": "Project Management App",
  "repository": "github:myxozoa/LPM",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "Lamdba PM App",
    "appId": "com.rmiksch.pmapp",
    "copyright": "Copyright Â© 2018 Ronnie Miksch",
    "directories": {
      "output": "./release-builds"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "dmg": {
      "icon": "./assets/icons/mac/PM_App.icns"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": "false",
      "perMachine": "true",
      "allowToChangeInstallationDirectory": "true",
      "installerIcon": "./assets/icons/win/PM_App.ico",
      "deleteAppDataOnUninstall": "true"
    },
    "linux": {
      "target": "AppImage",
      "maintainer": "Ronnie Miksch"
    }

  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-builder": "^20.28.3"
  },
  "dependencies": {
    "bootstrap": "^4.0.0",
    "jquery": "^3.3.1",
    "mkdirp": "^0.5.1",
    "nedb": "^1.8.0",
    "popper.js": "^1.14.3",
    "sudo-prompt": "^8.2.0"
  }
}
